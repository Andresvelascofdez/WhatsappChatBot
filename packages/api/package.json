{
  "name": "@chatbot/api",
  "version": "0.1.0",
  "description": "Serverless API for WhatsApp booking chatbot",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "deploy:vercel": "vercel deploy",
    "deploy:cloudflare": "wrangler deploy"
  },
  "dependencies": {
    "@chatbot/booking": "workspace:*",
    "@chatbot/db": "workspace:*",
    "@chatbot/gcal": "workspace:*",
    "@chatbot/wa": "workspace:*",
    "@hono/zod-validator": "^0.7.2",
    "express": "^5.1.0",
    "hono": "^3.12.0",
    "twilio": "^4.19.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@types/express": "^5.0.3",
    "@types/node": "^20.11.0",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vercel": "^32.7.2",
    "vitest": "^1.2.0",
    "wrangler": "^3.22.1"
  }
}
