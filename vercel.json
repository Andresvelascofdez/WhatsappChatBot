{
  "version": 2,
  "installCommand": "pnpm install --frozen-lockfile=false",
  "builds": [
    {
      "src": "packages/api/src/app.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "packages/**"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/packages/api/src/app.ts" }
  ]
}
