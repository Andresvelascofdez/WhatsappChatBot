{
  "version": 2,
  "installCommand": "pnpm install --frozen-lockfile=false",
  "builds": [
    {
      "src": "packages/api/src/app.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/packages/api/src/app.ts" },
    { "src": "/webhook", "dest": "/packages/api/src/app.ts" },
    { "src": "/health", "dest": "/packages/api/src/app.ts" }
  ]
}
