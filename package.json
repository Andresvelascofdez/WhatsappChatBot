{
  "name": "whatsapp-booking-chatbot",
  "version": "0.1.0",
  "description": "Multi-tenant WhatsApp chatbot for appointment booking with Google Calendar integration",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.6",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "db:migrate": "pnpm --filter @chatbot/db migrate",
    "db:seed": "pnpm --filter @chatbot/db seed",
    "precommit": "lint-staged",
    "client:add": "node scripts/add-new-client.js",
    "client:authorize": "node scripts/authorize-client-calendar.js",
    "client:verify": "node scripts/verify-google-config.js"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.sql": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "hono": "^4.0.0",
    "twilio": "^4.19.3"
  }
}
